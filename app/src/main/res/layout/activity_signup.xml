<?xml version="1.0" encoding="utf-8"?>
<!--
    SignUpActivity - Giao diện đăng ký chuẩn, đẹp, chuyên nghiệp
    Input focus ngay, hiện bàn phím tức thì
-->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient"
    android:fitsSystemWindows="true"
    tools:context=".auth.SignUpActivity">

    <!-- Background Decorations -->
    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:alpha="0.08"
        android:background="@drawable/bg_circle_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="-70dp"
        android:layout_marginTop="-50dp" />

    <View
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:alpha="0.06"
        android:background="@drawable/bg_circle_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="-40dp"
        android:layout_marginBottom="120dp" />

    <!-- ScrollView chứa toàn bộ form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="32dp"
            android:paddingBottom="40dp"
            android:paddingHorizontal="24dp">

            <!-- Logo và Header -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="40dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_laundry"
                    app:tint="@color/light_sea_green" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvHeaderSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/create_account"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:letterSpacing="0.01"
                android:shadowColor="#50000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <TextView
                android:id="@+id/tvSubHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Tạo tài khoản để bắt đầu sử dụng"
                android:textColor="@color/white_smoke"
                android:textSize="15sp"
                android:alpha="0.9" />

            <!-- Form Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSignUpForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="16dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Họ và tên -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:hintEnabled="false"
                        app:errorEnabled="true"
                        app:errorTextColor="#F44336">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFullName"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_edit_text_selector"
                            android:drawableStart="@drawable/ic_user_small"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:hint="@string/full_name"
                            android:inputType="textPersonName|textCapWords"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textColor="@color/dark_late_gray"
                            android:textColorHint="@color/dark_gray"
                            android:textSize="15sp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:clickable="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:hintEnabled="false"
                        app:errorEnabled="true"
                        app:errorTextColor="#F44336">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_edit_text_selector"
                            android:drawableStart="@drawable/ic_email"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textColor="@color/dark_late_gray"
                            android:textColorHint="@color/dark_gray"
                            android:textSize="15sp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:clickable="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Số điện thoại -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:hintEnabled="false"
                        app:errorEnabled="true"
                        app:errorTextColor="#F44336">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_edit_text_selector"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:hint="@string/phone_optional"
                            android:inputType="phone"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textColor="@color/dark_late_gray"
                            android:textColorHint="@color/dark_gray"
                            android:textSize="15sp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:clickable="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Mật khẩu -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/dark_gray"
                        app:hintEnabled="false"
                        app:errorEnabled="true"
                        app:errorTextColor="#F44336">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_edit_text_selector"
                            android:drawableStart="@drawable/ic_password"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="50dp"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:textColor="@color/dark_late_gray"
                            android:textColorHint="@color/dark_gray"
                            android:textSize="15sp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:clickable="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password hint -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_info"
                            app:tint="@color/dark_gray"
                            android:alpha="0.6" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:text="@string/password_requirement"
                            android:textColor="@color/dark_gray"
                            android:textSize="12sp"
                            android:lineSpacingExtra="2dp"
                            android:alpha="0.8" />

                    </LinearLayout>

                    <!-- Nút Đăng ký -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/bg_button_primary"
                        android:fontFamily="@font/nunito_bold"
                        android:text="@string/sign_up"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:letterSpacing="0.03"
                        android:elevation="8dp"
                        app:backgroundTint="@null"
                        app:cornerRadius="16dp" />

                    <!-- Divider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1.5dp"
                            android:layout_weight="1"
                            android:background="@color/silver"
                            android:alpha="0.4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:fontFamily="@font/nunito_bold"
                            android:text="@string/or"
                            android:textColor="@color/dark_gray"
                            android:textSize="13sp"
                            android:alpha="0.7" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1.5dp"
                            android:layout_weight="1"
                            android:background="@color/silver"
                            android:alpha="0.4" />

                    </LinearLayout>

                    <!-- Đã có tài khoản -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:text="@string/already_have_account"
                            android:textColor="@color/dark_gray"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:padding="6dp"
                            android:fontFamily="@font/nunito_bold"
                            android:text="@string/login"
                            android:textColor="@color/light_sea_green"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Terms Notice -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Bằng cách đăng ký, bạn đồng ý với Điều khoản dịch vụ và Chính sách bảo mật của chúng tôi"
                android:textAlignment="center"
                android:textColor="@color/white_smoke"
                android:textSize="12sp"
                android:alpha="0.75"
                android:lineSpacingExtra="3dp"
                android:paddingHorizontal="20dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Loading Overlay -->
    <View
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Loading Progress Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:indeterminateTint="@color/light_sea_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Đang tạo tài khoản..."
                android:textColor="@color/dark_late_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Vui lòng đợi"
                android:textColor="@color/dark_gray"
                android:textSize="13sp"
                android:alpha="0.7" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
