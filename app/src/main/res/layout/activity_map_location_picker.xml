<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/select_location_on_map"
        app:titleTextColor="@color/dark_late_gray" />

    <!-- Map Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_action_bar"
        android:layout_below="@+id/toolbar">

        <!-- Search Box -->
        <androidx.cardview.widget.CardView
            android:id="@+id/search_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/et_search_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:hint="Tìm kiếm địa điểm..."
                    android:imeOptions="actionSearch"
                    android:inputType="textPostalAddress"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/dark_late_gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_search_map"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_rounded"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Tìm"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- OpenStreetMap View -->
        <org.osmdroid.views.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/search_card" />

        <!-- Center Marker -->
        <ImageView
            android:id="@+id/center_marker"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_location"
            android:tint="@color/dark_late_gray"
            tools:ignore="ContentDescription,UseAppTint" />

        <!-- Current Location FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_location"
            app:backgroundTint="@color/dark_late_gray"
            app:tint="@android:color/white"
            tools:ignore="ContentDescription" />

        <!-- Location Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/location_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tv_selected_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:text="@string/getting_location_info"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_coordinates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:text=""
                    android:textColor="@color/light_gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <!-- Location Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="@string/selected_location"
                android:textColor="@color/dark_late_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_bottom_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/tap_to_select_location"
                android:textColor="@color/dark_late_gray"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/btn_confirm_location"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/bg_item_rounded"
            android:fontFamily="@font/nunito_black"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/confirm_location"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:enabled="false" />
    </LinearLayout>

</RelativeLayout>
