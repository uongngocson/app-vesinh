<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".support.FaqDetailDialogFragment">

    <!-- Background Dim -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true" />

    <!-- Dialog Content -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/ivFaqIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="FAQ Icon"
                    android:src="@drawable/ic_help"
                    android:tint="@color/primary" />

                <!-- Title -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFaqTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Làm thế nào để đặt đơn hàng?" />

                    <TextView
                        android:id="@+id/tvFaqCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        tools:text="Hướng dẫn sử dụng" />
                </LinearLayout>

                <!-- Close Button -->
                <ImageView
                    android:id="@+id/btnClose"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Close"
                    android:src="@drawable/ic_close"
                    android:tint="@color/text_secondary" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@color/divider_color" />

            <!-- Content Scroll Area -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:maxHeight="400dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Question -->
                    <TextView
                        android:id="@+id/tvFaqQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Làm thế nào để đặt đơn hàng?" />

                    <!-- Answer -->
                    <TextView
                        android:id="@+id/tvFaqAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        tools:text="Để đặt đơn hàng, bạn hãy làm theo các bước sau..." />

                    <!-- Additional Info (if available) -->
                    <LinearLayout
                        android:id="@+id/layoutAdditionalInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Thông tin bổ sung"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAdditionalInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="4dp"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp"
                            tools:text="Nếu bạn gặp khó khăn, hãy liên hệ hotline hỗ trợ." />
                    </LinearLayout>

                    <!-- Related Links (if available) -->
                    <LinearLayout
                        android:id="@+id/layoutRelatedLinks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Liên kết liên quan"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRelated1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="4dp"
                            android:text="Hướng dẫn thanh toán"
                            app:chipBackgroundColor="@color/primary_light"
                            app:chipMinHeight="32dp"
                            app:chipStrokeColor="@color/primary"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRelated2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="4dp"
                            android:text="Theo dõi đơn hàng"
                            app:chipBackgroundColor="@color/primary_light"
                            app:chipMinHeight="32dp"
                            app:chipStrokeColor="@color/primary"
                            app:chipStrokeWidth="1dp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <!-- Contact Support Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContactSupport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Liên hệ hỗ trợ"
                    android:textColor="@color/primary"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_support"
                    app:iconGravity="textStart"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

                <!-- Close Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCloseDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đóng"
                    app:cornerRadius="8dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
