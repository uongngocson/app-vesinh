<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Blog image -->
        <ImageView
            android:id="@+id/related_blog_image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_post2" />

        <!-- Content container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="30dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/related_blog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semi_bold"
                android:maxLines="2"
                android:text="Cách loại bỏ vết bẩn cứng đầu trên quần áo"
                android:textColor="@color/dark_late_gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Date and views -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_clock"
                    android:tint="@color/dark_gray" />

                <TextView
                    android:id="@+id/related_blog_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="1 ngày trước"
                    android:textColor="@color/dark_gray"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_eye"
                    android:tint="@color/dark_gray" />

                <TextView
                    android:id="@+id/related_blog_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="856"
                    android:textColor="@color/dark_gray"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Arrow indicator -->
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right"
            android:tint="@color/light_sea_green" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
