<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke"
    tools:context=".menu.blog.BlogFragment">

    <!-- Header với background trắng sạch sẽ -->
    <LinearLayout
        android:id="@+id/header_blog"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_black"
            android:text="Blog &amp; Tips"
            android:textColor="@color/dark_late_gray"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Mẹo vặt và kiến thức về giặt ủi"
            android:textColor="@color/dark_gray"
            android:textSize="14sp" />

        <!-- Search bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_search_rounded"
            android:elevation="2dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_search"
                android:tint="@color/dark_gray" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="16dp"
                android:background="@null"
                android:fontFamily="@font/nunito_regular"
                android:hint="Tìm kiếm bài viết..."
                android:textColor="@color/dark_late_gray"
                android:textColorHint="@color/dark_gray"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Categories horizontal scroll -->
    <HorizontalScrollView
        android:id="@+id/categories_scroll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/header_blog"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginEnd="12dp"
                android:text="Tất cả"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/light_sea_green"
                app:chipCornerRadius="19dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginEnd="12dp"
                android:text="Mẹo giặt ủi"
                android:textColor="@color/dark_gray"
                android:textSize="13sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="19dp"
                app:chipStrokeColor="@color/light_gray"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginEnd="12dp"
                android:text="Chăm sóc quần áo"
                android:textColor="@color/dark_gray"
                android:textSize="13sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="19dp"
                app:chipStrokeColor="@color/light_gray"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginEnd="12dp"
                android:text="Khuyến mãi"
                android:textColor="@color/dark_gray"
                android:textSize="13sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="19dp"
                app:chipStrokeColor="@color/light_gray"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Tin tức"
                android:textColor="@color/dark_gray"
                android:textSize="13sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="19dp"
                app:chipStrokeColor="@color/light_gray"
                app:chipStrokeWidth="1.5dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView for blog posts -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_blog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/categories_scroll"
        android:layout_marginTop="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_blog_post" />

</RelativeLayout>