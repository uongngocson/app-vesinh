<?xml version="1.0" encoding="utf-8"?>
<!--
    LoginActivity Layout - Thiết kế siêu đẹp chuyên nghiệp
    ✨ Features: Modern gradient, glassmorphism, smooth animations
-->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient"
    tools:context=".auth.LoginActivity">

    <!-- Background Decoration Elements -->
    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:alpha="0.1"
        android:background="@drawable/bg_circle_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="-50dp"
        android:layout_marginTop="-50dp" />

    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:alpha="0.08"
        android:background="@drawable/bg_circle_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="-40dp"
        android:layout_marginBottom="100dp" />

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:paddingHorizontal="24dp">

            <!-- Logo Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLogo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="45dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_laundry"
                    app:tint="@color/light_sea_green" />

            </androidx.cardview.widget.CardView>

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/tvAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:letterSpacing="0.02"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"
                app:layout_constraintTop_toBottomOf="@id/cardLogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="@string/login_welcome"
                android:textColor="@color/white_smoke"
                android:textSize="16sp"
                android:alpha="0.9"
                app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Login Form Card - Glassmorphism Style -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLoginForm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="16dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvWelcome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <!-- Login Header -->
                    <TextView
                        android:id="@+id/tvLoginTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="@string/login_title"
                        android:textColor="@color/dark_late_gray"
                        android:textSize="26sp"
                        android:letterSpacing="0.01" />

                    <TextView
                        android:id="@+id/tvLoginSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:text="@string/login_subtitle"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp"
                        android:alpha="0.85" />

                    <!-- Email Input with Modern Style -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:hintEnabled="false"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_edit_text_selector"
                            android:drawableStart="@drawable/ic_email"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/dark_late_gray"
                            android:textColorHint="@color/dark_gray"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/dark_gray"
                        app:hintEnabled="false"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_edit_text_selector"
                            android:drawableStart="@drawable/ic_password"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="48dp"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:textColor="@color/dark_late_gray"
                            android:textColorHint="@color/dark_gray"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Forgot Password -->
                    <TextView
                        android:id="@+id/tvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="14dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="@string/forgot_password"
                        android:textColor="@color/light_sea_green"
                        android:textSize="14sp" />

                    <!-- Login Button with Gradient -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bg_button_primary"
                        android:fontFamily="@font/nunito_bold"
                        android:text="@string/login"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:letterSpacing="0.03"
                        android:elevation="8dp"
                        app:backgroundTint="@null"
                        app:cornerRadius="16dp" />

                    <!-- Divider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1.5dp"
                            android:layout_weight="1"
                            android:background="@color/silver"
                            android:alpha="0.5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:fontFamily="@font/nunito_bold"
                            android:text="@string/or"
                            android:textColor="@color/dark_gray"
                            android:textSize="13sp"
                            android:alpha="0.7" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1.5dp"
                            android:layout_weight="1"
                            android:background="@color/silver"
                            android:alpha="0.5" />

                    </LinearLayout>

                    <!-- Sign Up Link -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:text="@string/dont_have_account"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvSignUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            android:fontFamily="@font/nunito_bold"
                            android:text="@string/sign_up"
                            android:textColor="@color/light_sea_green"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Security Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardLoginForm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/white_smoke"
                    android:alpha="0.8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:text="Bảo mật với mã hóa 256-bit"
                    android:textColor="@color/white_smoke"
                    android:textSize="12sp"
                    android:alpha="0.8" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Loading Overlay with Blur Effect -->
    <View
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Loading Progress Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="@color/light_sea_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Đang đăng nhập..."
                android:textColor="@color/dark_late_gray"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
