<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".menu.blog.BlogDetailActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_blog_detail"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        app:title="Chi tiết bài viết"
        app:titleTextColor="@color/dark_late_gray" />

    <!-- Blog image -->
    <ImageView
        android:id="@+id/blog_detail_image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@+id/toolbar_blog_detail"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_post2" />

    <!-- Category badge -->
    <TextView
        android:id="@+id/blog_detail_category"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/toolbar_blog_detail"
        android:layout_margin="20dp"
        android:background="@drawable/bg_rounded_green"
        android:elevation="4dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Mẹo giặt ủi"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <!-- Content container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/blog_detail_image"
        android:layout_marginTop="-40dp"
        android:background="@drawable/bg_rounded_white_top"
        android:paddingTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/blog_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_black"
                android:lineSpacingExtra="8dp"
                android:text="Cách giặt đồ trắng hiệu quả tại nhà"
                android:textColor="@color/dark_late_gray"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- Author and date info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_user"
                    android:tint="@color/light_sea_green" />

                <TextView
                    android:id="@+id/blog_detail_author"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:text="Papa Laundry"
                    android:textColor="@color/light_sea_green"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_clock"
                    android:tint="@color/dark_gray" />

                <TextView
                    android:id="@+id/blog_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="2 giờ trước"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_eye"
                    android:tint="@color/dark_gray" />

                <TextView
                    android:id="@+id/blog_detail_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="1.2k lượt xem"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@color/silver" />

            <!-- Content -->
            <TextView
                android:id="@+id/blog_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:lineSpacingExtra="10dp"
                android:text="Giặt đồ trắng là một công việc tưởng chừng đơn giản nhưng để giữ được độ trắng sáng và bền đẹp theo thời gian thì không phải ai cũng biết cách làm đúng.\n\nTrong bài viết này, chúng tôi sẽ hướng dẫn bạn các bước giặt đồ trắng hiệu quả tại nhà với những nguyên liệu sẵn có và phương pháp tự nhiên, an toàn cho sức khỏe.\n\n**Bước 1: Phân loại đồ giặt**\nTrước khi giặt, bạn nên phân loại đồ trắng theo chất liệu và mức độ bẩn. Điều này giúp tránh tình trạng đồ bị phai màu hoặc hỏng.\n\n**Bước 2: Sử dụng nước tẩy tự nhiên**\nThay vì dùng hóa chất mạnh, bạn có thể dùng baking soda, giấm trắng hoặc chanh để tẩy trắng đồ giặt một cách tự nhiên.\n\n**Bước 3: Chế độ giặt phù hợp**\nChọn chế độ giặt phù hợp với loại vải, nhiệt độ nước thích hợp để tránh co rút hoặc hỏng vải.\n\n**Bước 4: Phơi đồ đúng cách**\nPhơi đồ ở nơi có nhiều nắng, tránh phơi trực tiếp dưới mưa hoặc nơi ẩm thấp để giữ độ trắng tự nhiên."
                android:textColor="@color/dark_late_gray"
                android:textSize="17sp" />

            <!-- Tags -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Tags:"
                android:textColor="@color/dark_late_gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                app:singleLine="false">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="Giặt đồ trắng"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:chipBackgroundColor="@color/light_sea_green"
                    app:chipCornerRadius="19dp"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="Mẹo vặt gia đình"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:chipBackgroundColor="@color/silver"
                    app:chipCornerRadius="19dp"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="Chăm sóc quần áo"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:chipBackgroundColor="@color/silver"
                    app:chipCornerRadius="19dp"
                    app:chipStrokeWidth="0dp" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Related articles -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Bài viết liên quan"
                android:textColor="@color/dark_late_gray"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_related_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_related_blog" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
